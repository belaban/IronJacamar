<project name="jboss-jca-standalone" 
         default="compile" 
         xmlns:ivy="antlib:org.apache.ivy.ant">

  <!-- ================================= 
       Properties              
       ================================= -->
  <property name="build.standalone.dir" value="${build.dir}/standalone" />

  <!-- ================================= 
       Target: compile
       ================================= -->
  <target name="compile">
    <mkdir dir="${build.standalone.dir}" />
    <mkdir dir="${build.standalone.dir}/impl" />

    <javac srcdir="src/main"
           destdir="${build.standalone.dir}/impl"
           classpathref="standalone.lib.path.id"
           debug="${javac.debug}"
           deprecation="${javac.deprecation}"
           optimize="${javac.optimize}">
      <compilerarg value="-Xlint"/>
    </javac> 
  </target>

  <!-- ================================= 
       Target: jars 
       ================================= -->
  <target name="jars" depends="compile">
    <jar destfile="${target.dir}/jboss-jca-standalone.jar"
         manifest="src/main/resources/standalone-manifest.mf"
         basedir="${build.standalone.dir}/impl"
         excludes="**/*.java"/>
  </target>

  <!-- ================================= 
       Target: docs
       ================================= -->
  <target name="docs">
    <mkdir dir="${target.dir}/docs/standalone"/>
    <javadoc packagenames="org.*"
             sourcepath="src/main/java"
             destdir="${target.dir}/docs/standalone"
             author="true"
             version="true"
             windowtitle="JBoss JCA Standalone"
             doctitle="JBoss JCA Standalone"
             use="true"
             classpathref="standalone.lib.path.id"
             bottom="Copyright &#169; 2008-2009 Red Hat Middleware LLC (http://www.jboss.com/)">
      <link offline="true" href="http://java.sun.com/j2se/5/docs/api/" packagelistLoc="${java.home}/../docs/api"/>
    </javadoc>
  </target>

  <!-- ================================= 
       Target: standalone
       ================================= -->
  <target name="standalone" depends="compile">
    <mkdir dir="${target.dir}/standalone"/>
    <mkdir dir="${target.dir}/standalone/bin"/>
    <mkdir dir="${target.dir}/standalone/lib"/>
    <mkdir dir="${target.dir}/standalone/lib/endorsed"/>
    <mkdir dir="${target.dir}/standalone/server"/>
    <mkdir dir="${target.dir}/standalone/server/jca"/>
    <mkdir dir="${target.dir}/standalone/server/jca/conf"/>
    <mkdir dir="${target.dir}/standalone/server/jca/conf/bootstrap"/>
    <mkdir dir="${target.dir}/standalone/server/jca/deploy"/>

    <copy todir="${target.dir}/standalone/bin">
      <fileset dir="src/main/resources/">
        <include name="**/*.sh"/>
        <include name="**/*.bat"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/bin">
      <fileset dir="${target.dir}">
        <include name="jboss-jca-standalone.jar"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/server/jca/conf">
      <fileset dir="src/main/resources">
        <include name="*.xml"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/server/jca/conf/bootstrap">
      <fileset dir="src/main/resources/bootstrap">
        <include name="*.xml"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/server/jca/conf/bootstrap">
      <fileset dir="${target.dir}/bootstrap">
        <include name="**/*.xml"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/server/jca/conf">
      <fileset dir="src/main/resources/">
        <include name="*.properties"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/server/jca/deploy">
      <fileset dir="src/main/resources/deployment">
        <include name="**/*.xml"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/lib">
      <fileset dir="${target.dir}">
        <include name="*.jar"/>
        <exclude name="jboss-jca-deployers-fungal.jar"/>
        <exclude name="jboss-jca-fungal-services.jar"/>
        <exclude name="jboss-jca-fungal.jar"/>
        <exclude name="jboss-jca-sjc.jar"/>
        <exclude name="jboss-jca-standalone.jar"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/lib">
      <fileset dir="${lib.dir}/standalone">
        <include name="*.jar"/>
        <exclude name="jaxb-api.jar"/>
        <exclude name="xercesImpl.jar"/>
        <exclude name="*xjc.jar"/>
        <exclude name="stax-api.jar"/>
      </fileset>
    </copy>

    <copy todir="${target.dir}/standalone/lib/endorsed">
      <fileset dir="${lib.dir}/standalone">
        <include name="jaxb-api.jar"/>
        <include name="xercesImpl.jar"/>
        <include name="stax-api.jar"/>
      </fileset>
    </copy>

    <chmod dir="${target.dir}/standalone/bin" perm="ugo+rx" includes="**/*.sh"/>

  </target>

</project>
