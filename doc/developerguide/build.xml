<project name="developerguide" default="all" basedir=".">

  <property name="build.dir" value="${basedir}/../../target/docs/developerguide"/>
  <property name="pdf.name"  value="IronJacamarDeveloperGuide.pdf"/>
  <import file="${basedir}/../../tools/docbook/support.xml"/>

  <target name="all" depends="clean">
    <mkdir dir="en-US/images" />
    <antcall target="lang.all"><param name="lang" value="en-US"/></antcall>
  </target>

  <target name="pdf">
    <mkdir dir="en-US/images" />
    <antcall target="lang.docpdf"><param name="lang" value="en-US"/></antcall>
  </target>

  <target name="html">
    <mkdir dir="en-US/images" />
    <antcall target="lang.dochtml"><param name="lang" value="en-US"/></antcall>
  </target>

  <target name="htmlsingle">
    <mkdir dir="en-US/images" />
    <antcall target="lang.dochtmlsingle"><param name="lang" value="en-US"/></antcall>
  </target>

</project>
