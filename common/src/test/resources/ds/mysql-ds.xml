<?xml version="1.0" encoding="UTF-8"?>
<!-- See http://www.jboss.org/community/wiki/Multiple1PC for information about datasource -->

<datasources xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="http://www.jboss.org/jee/schema/ironjacamar/datasources_1_0.xsd">
  <datasource jndi-name="MySqlDS" pool-name="MySqlDS">
    <connection-url>jdbc:mysql://mysql-hostname:3306/jbossdb</connection-url>
    <driver-class>com.mysql.jdbc.Driver</driver-class>
    <security>
      <user-name>x</user-name>
      <password>y</password>
    </security> 
    <validation>
      <!-- example of how to specify a class that determines a connection is valid before it is handed out from the pool -->
      <valid-connection-checker-class-name>org.jboss.jca.adapters.jdbc.vendor.DummyValidConnectionChecker</valid-connection-checker-class-name>
      <!-- this will be run before a managed connection is removed from the pool for use by a client -->
      <check-valid-connection-sql>select * from something</check-valid-connection-sql>
      <!--example of how to specify class that determines if exception means connection should be destroyed -->
      <exception-sorter-class-name>org.jboss.jca.adapters.jdbc.vendor.MySQLExceptionSorter</exception-sorter-class-name>
    </validation>
    <!-- sql to call when connection is created <new-connection-sql>some arbitrary sql</new-connection-sql> -->
  </datasource>
</datasources>
